<% if user_signed_in? && current_user.is_admin? %>
  <p class="text-center">
    <a href="/"><img src="/img/fr.png" class="config-logo" alt="Langue française"/></a>
    <a href="/en<%= request.path %>"><img src="/img/en.png" class="config-logo" alt="Langue anglaise"/></a>
    <a href="#"><img src="/img/br.png" class="config-logo" alt="Langue brésilienne"/></a>
  </p>
  <h4 class="text-center"><%= t('canvas_r.admin_titre') %></h4>
  <ul class="tabs vertical"  data-active-collapse="true" data-tabs id="tabs_right">
    <li class="tabs-title is-active"><a href="#panel1r" aria-selected="true"><%= t('canvas_r.creation_utilisateur') %></a></li>
    <li class="tabs-title"><a href="#panel2r"><%= t('canvas_r.edition_utilisateur') %></a></li>
    <li class="tabs-title"><a href="#panel3r"><%= t('canvas_r.statistiques') %></a></li>
  </ul>

  <div class="tabs-content" data-tabs-content="tabs_right">

    <div class="tabs-panel is-active" id="panel1r">
      <p><%= t('canvas_r.creation_utilisateur') %></p>
      <%= form_for :eleve, url: desk_path(current_user.nom) do |f| %>

        <%= f.label :identifiant_eleve, t('canvas_r.nom_utilisateur') %>
        <%= f.text_field :identifiant_eleve %>

        <%= f.label :password, t('canvas_r.mdp') %>
        <%= f.password_field :password %>

        <%= f.submit :valider, value: t('canvas_r.valider'), class: "button primary" %>

      <% end %>
    </div>

    <div class="tabs-panel" id="panel2r">
      <p><%= t('canvas_r.edition_utilisateur') %></p>
      <ul>
        <%= form_tag desk_path(current_user.nom), method: :delete do %>
          <%= hidden_field_tag :hidden, value: "delete_eleve" %>
          <% @eleves.each do |e| %>
            <li><%= e.identifiant_eleve %> <%= check_box_tag "mesEleves[]", e.id %></li>
          <% end %>
          <%= submit_tag :supprimer %>
        <% end %>

      </ul>
    </div>

    <div class="tabs-panel" id="panel3r">
      <p><%= t('canvas_r.statistiques') %></p>
      <p><%= t('canvas_r.stockage') %> :</p>
    </div>

  </div>

      <p><%= t('canvas_r.stockage') %> : <%= @mo_used %> mo sur <strong>500 mo disponible</strong><br/>
      <div class="text-center success progress" role="progressbar" tabindex="0" aria-valuenow="<%= @total %>" aria-valuemin="0" aria-valuemax="100">
        <div class="progress-meter" style="width: <%= @total %>%">
          <p class="progress-meter-text"><%= @total %>%</p>
        </div>
      </div>

    </div>
  </div>
<% end %>
