<div class="row">
    <div class="small-6 large-centered columns">
        <h2>Cr√©ation de votre compte</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

            <%= f.label :nom, t('accueil.nom') %>
            <%= f.text_field :nom, autofocus: true, required: true, onkeypress: "return verif(event);" %>

            <%= f.label :email, t('accueil.email') %>
            <%= f.email_field :email, autofocus: true, required: true %>

            <%= f.label :password, t('accueil.mdp') %>
            6 <%= t('accueil.char_min') %>)
            <%= f.password_field :password, autocomplete: "off", required: true, minlength: "6" %>

            <%= f.hidden_field :is_admin, value: true, required: true %>
            <div class="text-center">
              <%= f.submit t('accueil.btn-inscription'), class: "button success" %>
            </div>
        <% end %>
    </div>
</div>
