<div class="row">
    <div class="small-6 large-centered columns">
        <h2>Cr√©ation de votre compte</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

            <%= f.label :nom, t('accueil.nom') %>
            <%= f.text_field :nom, autofocus: true %>

            <%= f.label :email, t('accueil.email') %>
            <%= f.text_field :email, autofocus: true %>

            <%= f.label :password, t('accueil.mdp') %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> <%= t('accueil.char_min') %>)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off" %>

            <%= f.hidden_field :is_admin, value: true %>

            <%= f.label :password_confirmation, t('accueil.confirmer_mdp') %>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
            <div class="text-center">
              <%= f.submit t('accueil.btn-inscription'), class: "button success" %>
            </div>
        <% end %>
    </div>
</div>
