<div class="row">
  <div class="small-4 large-centered columns">
    <h2><%= t('accueil.connexion') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, t('accueil.email') %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password, t('accueil.mdp') %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t('accueil.se-souvenir') %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit t('accueil.btn-connexion') %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
