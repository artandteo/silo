<div class="row">
  <div class="small-10 medium-6 small-centered large-centered columns">
  <p></p>
    <h2><%= t('accueil.connexion') %></h2>
      <p></p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :login, t('accueil.email') %>
        <%= f.text_field :login, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password, t('accueil.mdp') %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t('accueil.se-souvenir') %>
        </div>
      <% end -%>

      <div class="actions small-10 medium-6 small-centered large-centered columns text-center">
        <%= f.submit t('accueil.btn-connexion'), class: "button primary" %>
      </div>
    <% end %>
          <a href="<%= accueil_path %>">Page d'accueil</a><br/>
    <%= render "devise/shared/links" %>
  </div>
</div>
<br/>